<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/muchacomida"
    android:backgroundTint="@android:color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity7">

    <ListView
        android:id="@+id/listV_restaurantes"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/black"
        android:divider="@null" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9">

            <TextView
                android:id="@+id/tV_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="9"
                android:fontFamily="@font/montserrat"
                android:text="@string/tv_7"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30dp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <Button
                android:id="@+id/btn_pedido"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="3"
                android:backgroundTint="#00BCD4"
                android:fontFamily="@font/montserrat"
                android:text="@string/btn_pedido" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:srcCompat="@drawable/jamon_negro" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:srcCompat="@drawable/icono" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:srcCompat="@drawable/pollo_negro" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</LinearLayout>